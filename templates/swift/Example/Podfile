  use_frameworks!

  project 'Example/${POD_NAME}'

  local_pods

  pod '${POD_NAME}', :path => '../'

  target '${POD_NAME}_Tests' do
    inherit! :search_paths

    ${INCLUDED_PODS}
  end
end

